                                            </Canvas>

                                        </Viewbox>

                                    </Grid>

                                </Button>

                            </Grid>

                        </Grid>

                    </Grid>
                    <!--  Here the "Go 1 Lv Up" Button UI Definition ends.  -->

                </Grid>

                <Grid Grid.Row="3" Margin="20,20,20,0">

                    <Border
                        HorizontalAlignment="Center"
                        Background="#B807A6"
                        CornerRadius="5">

                        <Button
                            Padding="20,5,20,5"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0">

                            <Grid>

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="auto" />

                                    <ColumnDefinition Width="auto" />

                                </Grid.ColumnDefinitions>

                                <TextBlock Foreground="White" Text="CREATE DOCX" />

                            </Grid>

                        </Button>

                    </Border>

                </Grid>

                <Grid Grid.Row="4" Margin="20,20,20,20">

                    <Border Background="#876AFA" CornerRadius="20">

                        <ListView
                            Margin="5"
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding DocxEditor_EditedListItem_ViewModels}">

                            <ListView.ItemContainerStyle>

                                <Style TargetType="ListViewItem">

                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />

                                    <Setter Property="TextBlock.Foreground" Value="White" />

                                </Style>

                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>

                                <DataTemplate>

                                    <Border
                                        Padding="5,5,5,5"
                                        Background="White"
                                        BorderBrush="LightYellow"
                                        BorderThickness="1"
                                        CornerRadius="15"
                                        TextBlock.FontSize="15">

                                        <Grid>

                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="*" />

                                                <ColumnDefinition Width="auto" />

                                            </Grid.ColumnDefinitions>


                                            <TextBlock
                                                Grid.Column="0"
                                                Margin="10,0,0,0"
                                                Foreground="Black"
                                                Text="{Binding File_or_Folder_Name}" />


                                            <dropdownmenucontrol:DropdownMenu Grid.Column="1" Margin="10,0,10,0">

                                                <Border
                                                    Background="Black"
                                                    BorderBrush="White"
                                                    BorderThickness="1">

                                                    <TextBlock Foreground="White" Text="ww" />

                                                </Border>

                                            </dropdownmenucontrol:DropdownMenu>

                                        </Grid>

                                    </Border>

                                </DataTemplate>

                            </ListView.ItemTemplate>

                        </ListView>

                    </Border>

                </Grid>

            </Grid>

        </Border>

    </Grid>

</UserControl>
